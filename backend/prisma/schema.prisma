// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  room	Room?
}

model Room {
  id    Int     @id @default(autoincrement())
  name  String
  owner User    @relation(fields: [ownerId], references: [id])
  ownerId Int @unique
}
